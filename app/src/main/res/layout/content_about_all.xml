<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.sssta.zeroind.activity.AboutAllActivity"
    tools:showIn="@layout/activity_about_all"
    android:weightSum="1">



    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:gravity="start|center"
        android:text="检查更新"
        android:textSize="18sp"
        android:background="@drawable/bg_about_button"
        android:id="@+id/check_update_button"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:gravity="start|center"
        android:text="反馈"
        android:textSize="18sp"
        android:background="@drawable/bg_about_button"
        android:id="@+id/request_developer_button"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="30dp"
        android:paddingEnd="10dp"
        android:gravity="start|center"
        android:text="开发人员"
        android:textSize="18sp"
        android:background="@drawable/bg_about_button"
        android:id="@+id/developer_name_button"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:background="@drawable/bg_about_button">

    </Button>

</LinearLayout>
