            android:name="org.sssta.zeroind.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="org.sssta.zeroind.activity.ChooseWind"
            android:label="@string/title_activity_choose_wind"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="org.sssta.zeroind.activity.PostMessage"
            android:label="@string/title_activity_post_message"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="org.sssta.zeroind.activity.EditPostWind"
            android:label="@string/title_activity_edit_post_wind"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
